<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <!-- Action buttons in toolbar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_add_label"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_label" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Email Content Scroll View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Subject with Star -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/email_subject"
                    android:textSize="24sp"
                    android:textColor="#202124"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif" />

                <ImageButton
                    android:id="@+id/btn_star"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/btn_star_big_off"
                    android:contentDescription="@string/star_email" />

            </LinearLayout>

            <!-- Sender Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Sender Avatar -->
                    <ImageView
                        android:id="@+id/iv_sender_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/sender_avatar"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Sender Name and Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_sender_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sender_name"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_5_30_2024"
                                android:textSize="12sp"
                                android:layout_marginStart="8dp"
                                />

                        </LinearLayout>

                        <!-- Recipient info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_recipient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/me"
                                android:textSize="12sp"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Email Content -->
            <TextView
                android:id="@+id/tv_email_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_content_goes_here_this_is_where_the_main_body_of_the_email_will_be_displayed_it_can_contain_multiple_paragraphs_and_will_scroll_if_the_content_is_long"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="4dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_reply"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reply"
            android:layout_marginHorizontal="4dp" />

        <Button
            android:id="@+id/btn_reply_all"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reply_all"
            android:layout_marginHorizontal="4dp" />

        <Button
            android:id="@+id/btn_forward"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/forward"
            android:layout_marginHorizontal="4dp"
            />

    </LinearLayout>

</LinearLayout>